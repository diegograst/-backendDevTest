<?xml version="1.0" encoding="UTF-8" ?>

<ehcache xmlns:xsi="http:/www.w3.org/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="ehcache.xsd" updateCheck="false"
	monitoring="off">

	<defaultCache eternal="false" maxElementsInMemory="1000"
		overflowToDisk="false" diskPersistent="false" timeToIdleSeconds="0"
		timeToLiveSeconds="600" memoryStoreEvictionPolicy="LRU" />

	<cache name="similarProducts" maxElementsInMemory="1000"
		overflowToDisk="false" diskPersistent="false" eternal="false"
		timeToIdleSeconds="150" timeToLiveSeconds="300"
		memoryStoreEvictionPolicy="LFU" transactionalMode="off" />
</ehcache>